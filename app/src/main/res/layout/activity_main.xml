<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/symbolColor"
            android:orientation="vertical"
        >

            <Button
                android:id="@+id/setting"
                android:background="@drawable/ic__849830_multimedia_options_setting_settings_gear_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
            />

            <TextView
                android:id="@+id/sentence"
                android:fontFamily="@font/nanum"
                android:gravity="bottom"
                android:paddingBottom="20dp"
                android:text="오늘 뭐 먹지?"
                android:textColor="#FFFFFF"
                android:textFontWeight="900"
                android:textSize="25dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/flLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topLayout"
            android:orientation="vertical">

            <Button
                android:id="@+id/mixBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:background="@drawable/border1"
                android:fontFamily="@font/nanum"
                android:gravity="left|center"
                android:padding="15dp"
                android:text="내주변 식당 랜덤뽑기"
                android:textFontWeight="900" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/foodList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:id="@+id/blackDiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.5"
            android:visibility="invisible"
        />
        <LinearLayout
            android:layout_alignRight="@id/topLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
        >
            <LinearLayout
                android:id="@+id/floatLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
            >

                <TextView
                    android:id="@+id/textNavi"
                    android:background="#191818"
                    android:fontFamily="@font/nanum"
                    android:text="내 주변 식당 추가하기"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:textFontWeight="900"
                    android:paddingLeft="4sp"
                    android:paddingTop="1sp"
                    android:paddingRight="4sp"
                    android:paddingBottom="1sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:visibility="invisible"
                />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabNavi"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic__611320_add_and_location_maps_navigation_icon"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="38dp"
                    android:layout_marginLeft="6dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@id/fabMain"
                    app:layout_constraintEnd_toEndOf="@id/fabMain"
                    app:layout_constraintStart_toStartOf="@id/fabMain"
                    app:layout_constraintTop_toTopOf="@id/fabMain"
                    app:borderWidth="0dp"
                    app:fabCustomSize="50dp"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/floatLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
            >

                <TextView
                    android:id="@+id/textShare"
                    android:background="#191818"
                    android:fontFamily="@font/nanum"
                    android:text="리스트 공유하기"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:textFontWeight="900"
                    android:paddingTop="1sp"
                    android:paddingBottom="1sp"
                    android:paddingLeft="4sp"
                    android:paddingRight="4sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:visibility="invisible"
                />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabShare"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic__53438_share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="38dp"
                    android:layout_marginLeft="12dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@id/fabMain"
                    app:layout_constraintEnd_toEndOf="@id/fabMain"
                    app:layout_constraintStart_toStartOf="@id/fabMain"
                    app:layout_constraintTop_toTopOf="@id/fabMain"
                    app:borderWidth="0dp"
                    app:fabCustomSize="50dp"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/floatLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
            >
                <TextView
                    android:id="@+id/textModify"
                    android:background="#191818"
                    android:fontFamily="@font/nanum"
                    android:text="리스트 수정하기"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:textFontWeight="900"
                    android:paddingTop="1sp"
                    android:paddingBottom="1sp"
                    android:paddingLeft="4sp"
                    android:paddingRight="4sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:visibility="invisible"
                />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabModify"
                    android:src="@drawable/ic__402373_write_modify_tool_edit_pen_icon"
                    android:backgroundTint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="38dp"
                    android:layout_marginLeft="12dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@id/fabMain"
                    app:layout_constraintEnd_toEndOf="@id/fabMain"
                    app:layout_constraintStart_toStartOf="@id/fabMain"
                    app:layout_constraintTop_toTopOf="@id/fabMain"
                    app:borderWidth="0dp"
                    app:fabCustomSize="50dp"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/floatLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
            >

                <TextView
                    android:id="@+id/textadd"
                    android:background="#191818"
                    android:fontFamily="@font/nanum"
                    android:text="리스트 추가하기"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:textFontWeight="900"
                    android:paddingTop="1sp"
                    android:paddingBottom="1sp"
                    android:paddingLeft="4sp"
                    android:paddingRight="4sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabadd"
                    android:src="@drawable/ic__115237_add_plus_icon"
                    android:backgroundTint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="38dp"
                    android:layout_marginLeft="12dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@id/fabMain"
                    app:layout_constraintEnd_toEndOf="@id/fabMain"
                    app:layout_constraintStart_toStartOf="@id/fabMain"
                    app:layout_constraintTop_toTopOf="@id/fabMain"
                    app:borderWidth="0dp"
                    app:fabCustomSize="50dp"
                />
            </LinearLayout>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabMain"
                android:src="@drawable/ic_add_big"
                android:backgroundTint="@color/button_background_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginStart="24dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="24dp"
                app:borderWidth="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
            />
        </LinearLayout>
    </RelativeLayout>
</layout>